{
  "name": "event-management-server",
  "version": "1.0.0",
  "description": "Event Management Backend Server",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "docs": "node docs-server.js",
    "docs:build": "scalar bundle docs/api-spec.yaml --output docs/index.html",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:clear": "tsx prisma/clear-database.ts",
    "db:drop": "tsx prisma/drop-database.ts",
    "db:drop:sql": "prisma db execute --stdin < prisma/drop-database.sql",
    "db:fresh": "npm run db:clear && npm run db:push && npm run db:seed",
    "db:refresh": "npm run db:reset && npm run db:seed",
    "db:setup": "npm run db:generate && npm run db:push && npm run db:seed",
    "dev:fresh": "npm run db:fresh && npm run dev",
    "dev:reset": "npm run db:refresh && npm run dev"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@scalar/api-reference": "^1.32.1",
    "@scalar/cli": "^1.2.8",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.19.2",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^9.0.7",
    "prisma": "^5.22.0",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "event",
    "management",
    "api",
    "express",
    "typescript"
  ],
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "author": "",
  "license": "ISC"
}
