# Environment Variables for Event Management System
# Copy this file to .env and update with your actual values

# Environment
NODE_ENV=development

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/event_management"

# Server
PORT=5000

# JWT
JWT_SECRET="your-super-secure-jwt-secret-key-here"
JWT_EXPIRE="7d"

# Cloudinary Configuration (Replace with your actual values)
# You can get these from your Cloudinary dashboard
CLOUDINARY_URL="cloudinary://api_key:api_secret@cloud_name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"
CLOUDINARY_CLOUD_NAME="your-cloud-name"

# Client URL for CORS
CLIENT_URL="http://localhost:3000"

# Email Configuration (if needed for notifications)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"

# Redis Configuration (if needed for caching)
REDIS_URL="redis://localhost:6379"
